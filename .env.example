# ===========================================
# WEBGRE MVC - Environment Configuration
# ===========================================
# Copia questo file in .env e modifica i valori

# ===========================================
# APPLICATION SETTINGS
# ===========================================
APP_ENV=production
APP_DEBUG=false
APP_NAME="CoreGRE"
APP_VERSION="1.0.0"
VER_NO=1.CORESUITE
BUILD_NO=2025.10

# Subdirectory dell'applicazione (lascia vuoto se in root)
# Esempi: webgre3, new, "" (per root)
APP_SUBDIRECTORY=""

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# CoreSuite: connessione a MySQL condiviso in CoreServices
DB_HOST=core-mysql
DB_NAME=coregre
DB_USER=root
DB_PASS=rootpassword
DB_CHARSET=utf8mb4
DB_PORT=3306

# ===========================================
# SESSION & SECURITY
# ===========================================
SESSION_LIFETIME=7200
REMEMBER_TOKEN_LIFETIME=2592000
HASH_COST=12
CSRF_TOKEN_LENGTH=32

# ===========================================
# DEFAULT ROUTING
# ===========================================
DEFAULT_CONTROLLER="Home"
DEFAULT_ACTION="index"

# ===========================================
# TIMEZONE & LOCALE
# ===========================================
APP_TIMEZONE="Europe/Rome"
APP_LOCALE="it"

# ===========================================
# EMAIL CONFIGURATION (Opzionale)
# ===========================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=""
MAIL_PASSWORD=""
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=""
MAIL_FROM_NAME="${APP_NAME}"

# ===========================================
# FILE UPLOAD SETTINGS
# ===========================================
MAX_UPLOAD_SIZE=50M
ALLOWED_EXTENSIONS="jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx"

# ===========================================
# CACHE & PERFORMANCE
# ===========================================
# CoreSuite: usa Redis condiviso in CoreServices
CACHE_DRIVER=redis
CACHE_TTL=3600
REDIS_HOST=core-redis
REDIS_PORT=6379
REDIS_PASSWORD=coresuite_redis

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=debug
LOG_MAX_FILES=30




# ===========================================
# EXTERNAL SERVICES (Opzionale)
# ===========================================
# QR_CODE_SIZE=256
# PDF_ENGINE=tcpdf
# EXCEL_ENGINE=phpspreadsheet
# ===========================================
# CORESCM SYNC CONFIGURATION
# ===========================================
# URL API di CoreSCM su Aruba
CORESCM_API_URL=https://www.mgmshoes.it/scm/api/sync.php
# Secret per autenticazione API
CORESCM_API_SECRET=change-this-to-random-secret-key-min-32-chars
# Abilita/disabilita sync automatico
CORESCM_SYNC_ENABLED=true
