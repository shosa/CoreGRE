# ===========================================
# WEBGRE MVC - Environment Configuration
# ===========================================
# Copia questo file in .env e modifica i valori

# ===========================================
# APPLICATION SETTINGS
# ===========================================
APP_ENV=development
APP_DEBUG=true
APP_NAME="WEBGRE"
APP_VERSION="2.0.0"
BUILD_NO="2025.09"
VER_NO="3.1.Eloquent"

# Subdirectory dell'applicazione (lascia vuoto se in root)
# Esempi: webgre3, new, "" (per root)
APP_SUBDIRECTORY=""

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DB_HOST=localhost
DB_NAME=my_webgre
DB_USER=root
DB_PASS=""
DB_CHARSET=utf8mb4
DB_PORT=3306

# ===========================================
# SESSION & SECURITY
# ===========================================
SESSION_LIFETIME=7200
REMEMBER_TOKEN_LIFETIME=2592000
HASH_COST=12
CSRF_TOKEN_LENGTH=32

# ===========================================
# DEFAULT ROUTING
# ===========================================
DEFAULT_CONTROLLER="Home"
DEFAULT_ACTION="index"

# ===========================================
# TIMEZONE & LOCALE
# ===========================================
APP_TIMEZONE="Europe/Rome"
APP_LOCALE="it"


# ===========================================
# FILE UPLOAD SETTINGS
# ===========================================
MAX_UPLOAD_SIZE=50M
ALLOWED_EXTENSIONS="jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx"

# ===========================================
# CACHE & PERFORMANCE
# ===========================================
CACHE_DRIVER=file
CACHE_TTL=3600

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=debug
LOG_MAX_FILES=30

# ===========================================
# EXTERNAL SERVICES (Opzionale)
# ===========================================
# QR_CODE_SIZE=256
# PDF_ENGINE=tcpdf
# EXCEL_ENGINE=phpspreadsheet