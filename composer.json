{
    "name": "webgre/webgre-mvc",
    "description": "Sistema di gestione aziendale WEBGRE con architettura MVC",
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.0",
        "illuminate/database": "^10.0",
        "illuminate/events": "^10.0",
        "illuminate/console": "^10.0",
        "illuminate/filesystem": "^10.0",
        "symfony/console": "^6.0",
        "bacon/bacon-qr-code": "^2.0",
        "endroid/qr-code": "^4.8",
        "mpdf/mpdf": "^8.2",
        "phpmailer/phpmailer": "^6.8",
        "phpoffice/phpspreadsheet": "^1.28",
        "pichesi/tcpdf-php8": "^6.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6"
    },
    "autoload": {
        "psr-4": {
            "App\\Models\\": "app/models/",
            "App\\Controllers\\": "app/controllers/",
            "App\\Utils\\": "app/utils/",
            "Core\\": "core/"
        },
        "classmap": [
            "app/controllers/",
            "app/utils/",
            "core/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs-fix": "php-cs-fixer fix",
        "post-install-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-update-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    }
}
